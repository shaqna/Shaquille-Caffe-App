<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShaquilleCafeApp"
        tools:targetApi="31">
        <activity
            android:name=".ui.presentation.kitchen.KitchenActivity"
            android:exported="false" />
        <activity
            android:name=".ui.presentation.order.CheckoutOrderActivity"
            android:exported="false" />
        <activity
            android:name=".ui.presentation.order.OrderActivity"
            android:exported="false" />
        <activity
            android:name=".ui.presentation.splash.SplashActivity"
            android:exported="false" />
        <activity
            android:name=".ui.presentation.caffe.CaffeMenuActivity"
            android:exported="false" />
        <activity
            android:name=".ui.presentation.detail.CaffeMenuDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.presentation.caffe.CaffeMenuCategoryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.presentation.home.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>